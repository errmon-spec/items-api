{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "semistandard",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["app/assets/builds/**"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "html"]
}
